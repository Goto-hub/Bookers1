<h1>Editing Book</h1>
<% if @list.errors.any? %>

  <%= @list.errors.count %> errors prhibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li>error: <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>
  
  <h5>Body</h5>
  <%= f.text_area :body %>
  
  <div>
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div>
<p>
  <%= link_to "Show","/books/#{@list.id}" %> |
  <%= link_to "Back", "/books" %>
</p>
</div>
